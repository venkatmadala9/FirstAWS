pipeline {
    agent any
    tools {
        maven "maven"
        jdk "Java"
    }
    stages {
        stage('Initialize'){
            steps{
                echo "PATH = ${M2_HOME}/bin:${PATH}"
                echo "M2_HOME = /opt/maven"
            }
        }
        stage('Build') {
            steps {
                dir("/Users/Welcome/git/repository/FirstAWS") {
                bat 'mvn -B -DskipTests clean package'
                }
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying JAR to run on port 8083...'
                dir("FirstAWS/target") {
                    // Start the JAR in the background using 'start' and 'javaw'
                    // This command starts the JAR, releases the Jenkins process,
                    // and allows the job to complete successfully.
                    bat 'start javaw -jar FirstAWS-1.0.jar'
                }
            }
        }
     }
    
}
